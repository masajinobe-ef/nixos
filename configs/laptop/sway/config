### ======================= Sway Configuration ======================= ###

# Window Borders
default_border pixel 3
default_floating_border none

# Gaps
gaps inner 0
gaps outer 0

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "0"

# Mod Key (Super/Win)
set $mod Mod4

# Colors
client.focused          #7aa2f7 #414868 #ffffff
client.focused_inactive #414868 #1f2335 #a9b1d6
client.unfocused        #24283b #1a1b26 #737aa2
client.urgent           #ff5555 #1a1b26 #ffffff
client.placeholder      #1a1b26 #1a1b26 #ffffff

### ======================= Input/Output/Display ======================= ###
input type:keyboard {
    xkb_layout "us,ru"
    xkb_options "grp:caps_toggle"
    repeat_rate 70
    repeat_delay 180
}

input type:pointer {
    accel_profile flat
    pointer_accel -0.3
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
    accel_profile flat
    pointer_accel -0.2
}

seat * {
    xcursor_theme Adwaita 24
}

output * {
    mode 1366x768@60Hz
    #bg ~/Wallpapers/pc/wallhaven-l83gly.png fill
}

### ======================= Key Bindings ======================= ###
# System
bindsym $mod+Control+c swaymsg reload
bindsym $mod+Control+q swaymsg exit
bindsym $mod+q kill

# Workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# Movement
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Window Moving
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Move Focusable to Workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws0

# Layout
bindsym $mod+s fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+r layout toggle split

### ======================= Window Rules ======================= ###

# # Assign applications to Workspaces
assign [app_id="Alacritty"] $ws1
assign [app_id="firefox"] $ws2
assign [app_id="com.ayugram.desktop"] $ws3

# # Floating and specific Rules for Windows
for_window [title="Picture in picture"] floating enable, resize set 640 360, sticky enable
for_window [app_id="MEGAsync"] floating enable

### ======================= Autostart ======================= ###
exec {
    alacritty
    #firefox
    #ayugram-desktop
    sh -c "redshift"
}
exec brightnessctl -q set 40%

exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP DISPLAY SWAYSOCK
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP DISPLAY SWAYSOCK
exec systemctl --user start xdg-desktop-portal

exec waybar -c ~/.config/waybar/config.jsonc
exec mako

### ======================= Applications ======================= ###

# Terminal
bindsym $mod+Return exec alacritty

# Browser
bindsym $mod+w exec firefox

# Launcher
bindsym $mod+e exec rofi -show combi -combi-modes drun

# Audio
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

# Screenshot (requires grim / slurp / wl-clipboard)
bindsym $mod+equal exec grim ~/Pictures/$(date +'%Y-%m-%d-%H%M%S.png')
bindsym $mod+minus exec grim -g "$(slurp)" - | wl-copy

# Brightness control (requires brightnessctl)
bindsym XF86MonBrightnessUp exec brightnessctl -q set +5%
bindsym XF86MonBrightnessDown exec brightnessctl -q set 5%-
bindsym XF86KbdBrightnessUp   exec brightnessctl -d '*::kbd_backlight' set +5%
bindsym XF86KbdBrightnessDown exec brightnessctl -d '*::kbd_backlight' set 5%-
